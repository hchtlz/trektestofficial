= render Trek::GateComponent.new
  = form_for [:admin, @user_session] do |f|
    = f.group :email
      = f.email_field :email

    = f.group :password
      = f.password_field :password

    = render Trek::Form::ActionsComponent.new do |c|
      ruby:
        c.with_button(
          type: "submit",
          text: t("admin.actions.validate"),
          color: :grass,
        )

        c.with_link(
          href: %i[new admin user_password_reset],
          text: t(".forgot_password"),
        )
